@page
@model LesPiedsLegers.Pages.ReserveModel
@{
}
<div class="container mt-4">
    <h1>Réserver une Activité</h1>

    <div class="row">
        <div class="col-md-6">
            <div id="calendar"></div>
        </div>
        <div class="col-md-6">
            <h2>Options de Réservation</h2>
            <form>
                <div class="form-group">
                    <label for="succursale">Choix de la succursale</label>
                    <select class="form-control" id="succursale">
                        <option>Laval</option>
                        <option>Montérégie</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="activite">Sélection de l'activité</label>
                    <select class="form-control" id="activite">
                        <option>Marche en montagne</option>
                        <option>Kayak</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="nombre">Nombre de participants</label>
                    <input type="number" class="form-control" id="nombre" min="1">
                </div>
                <button type="submit" class="btn btn-primary">Réserver</button>
            </form>
        </div>
    </div>
</div>